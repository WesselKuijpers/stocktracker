<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>
  <table class="table table-striped">
    <tr>
      <th colspan="3" class="page-header">
        <h2>My friends</h2>
      </th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @friendships.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
          <%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-xs" %>
          <%= link_to "remove friend", friendship_path(friend), method: :delete, data: {confirm: "Are you sure you want to delete this friend?"}, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="ro col-lg-12">
    <p class="lead">You don't have any friends yet, Try adding some to see what they are tracking!</p>
  </div>
<% end %>